# Flow Blockchain Configuration
FLOW_NETWORK=testnet
FLOW_ADDRESS=your_flow_address_here
FLOW_PRIVATE_KEY=your_flow_private_key_here
FLOW_ACCESS_NODE=https://rest-testnet.onflow.org

# Coinbase Configuration
# Get your API keys from https://portal.cdp.coinbase.com/
COINBASE_API_KEY=your_coinbase_api_key_name_here
COINBASE_API_PRIVATE_KEY=your_coinbase_api_private_key_here
NEXT_PUBLIC_COINBASE_API_KEY=your_public_api_key_here
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret_here

# Infura Configuration (for Ethereum RPC)
# Get your API key from https://infura.io/
NEXT_PUBLIC_INFURA_API_KEY=your_infura_api_key_here

# The Graph Protocol Configuration
GRAPH_API_KEY=your_graph_api_key_here
GRAPH_DEPLOY_KEY=your_graph_deploy_key_here
SUBGRAPH_NAME=your_username/healthchain-subgraph

# x402 Protocol Configuration
X402_ENDPOINT=https://api.x402.org
X402_API_KEY=your_x402_api_key_here

# Database Configuration (if using external DB)
DATABASE_URL=postgresql://username:password@localhost:5432/healthchain

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Health Data Integrations
FITBIT_CLIENT_ID=your_fitbit_client_id_here
FITBIT_CLIENT_SECRET=your_fitbit_client_secret_here
APPLE_HEALTH_APP_ID=your_apple_health_app_id_here
GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id_here

# IPFS Configuration (for storing health data)
IPFS_GATEWAY=https://gateway.pinata.cloud
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn_here
POSTHOG_API_KEY=your_posthog_api_key_here

# Development
NODE_ENV=development
DEBUG=healthchain:*